@page "/"
@inject IJSRuntime JSRuntime
<PageTitle>Home</PageTitle>


<!--navbar goes here-->
<header>
    <nav class="navbar navbar-expand-lg bg-body-secondary">
        <div class="container-fluid">
            <a class="navbar-brand h3 " href="/">SN</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link active me-3 text-dark " aria-current="page" href="#">Home</a>
                    <a class="nav-link me-3 text-dark " href="/AboutMe">About Me</a>
                    <a class="nav-link me-3 text-dark " href="/Experience">Experience</a>
                    <a class="nav-link me-3 text-dark " href="/Projects">Projects</a>
                    <a class="nav-link me-3 text-dark " href="/ContactMe">Contact Me</a>
                </div>
            </div>
        </div>
    </nav>
</header>

<!--Navbar ends here-->

<!--About me starts here-->
<section id="about" class="py-5 bg-secondary text-light">
    <div class="container">
        <div class="row align-items-center">
            <!-- Left Column (Text) -->
            <div class="col-md-6">
                <p class="text-light large-font">Hello!</p>
                <h1 class="display-4 fw-bold text-dark animate__animated animate__zoomInDown">I am <em>Spheleke Ntshona</em></h1>
                <h3 class="mb-4 text-dark">I am a <span id="profession" class="animate__animated">Full Stack Developer</span></h3>

            </div>
            <!-- Right Column (Image) -->
            <div class="col-md-6 text-center animate__animated animate__pulse">
                <img src="images/SN.jpg" alt="Spheleke Ntshona" class="img-fluid rounded" style="border-radius: 30px; width: 400px; height: auto;">
            </div>
        </div>
    </div>
</section>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("changeProfession");
        }
    }
}


<!--footer starts here-->
<footer class="footer bg-dark text-light py-4">
    <div class="container text-center">
        <p>&copy; @DateTime.Now.Year Spheleke Ntshona. All rights reserved.</p>
        <ul class="list-inline">
            <li class="list-inline-item">
                <a href="https://github.com/MisterWest11/" class="text-light" target="_blank"><i class="bi bi-github"></i> GitHub</a>
            </li>
            <li class="list-inline-item">
                <a href="https://www.linkedin.com/in/spheleke-ntshona-6113822a4/" class="text-light" target="_blank"><i class="bi bi-linkedin"></i> LinkedIn</a>
            </li>
        </ul>
    </div>
</footer>